@namespace fromBuilder.Components

@code {
    private List<string> Elements = new() { "TextBox", "CheckBox", "Button", "Dropdown", "RadioButton", "TextArea"  };
}

<div class="toolbox">
    @foreach (var element in Elements)
    {
        <div class="toolbox-item"
             draggable="true"
             ondragstart="event.dataTransfer.setData('text/plain', '@element')">
            @element
        </div>
    }
</div>
<style>
    .toolbox {
        padding: 10px;
        background: #f8f8f8;
        height: 100%;
    }

    .toolbox-item {
        padding: 8px;
        margin: 5px 0;
        background: #dfe6e9;
        border-radius: 4px;
        cursor: grab;
        border: 1px solid #b2bec3;
    }
</style>
