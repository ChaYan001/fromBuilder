@namespace fromBuilder.Components
@code {
    private List<string> Elements = new() { "TextBox", "CheckBox", "Button", "Dropdown", "RadioButton", "TextArea"  };
}
<div class="toolbox">
    <h3 class="toolbox-title">Component Toolbox</h3>
    @foreach (var element in Elements)
    {
        <div class="toolbox-item"
             draggable="true"
             ondragstart="event.dataTransfer.setData('text/plain', '@element.Name')">
            <i class="icon-@element.Icon"></i>
            <span>@element.Name</span>
        </div>
    }
</div>
<style>
    .toolbox {
        padding: 16px;
        background: #f8f8f8;
        height: 100%;
        border-radius: 6px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }
    
    .toolbox-title {
        margin-top: 0;
        margin-bottom: 16px;
        font-size: 16px;
        color: #333;
        border-bottom: 1px solid #e1e1e1;
        padding-bottom: 8px;
    }
    
    .toolbox-item {
        padding: 10px;
        margin: 8px 0;
        background: #ffffff;
        border-radius: 4px;
        cursor: grab;
        border: 1px solid #dcdde1;
        display: flex;
        align-items: center;
        transition: all 0.2s ease;
    }
    
    .toolbox-item:hover {
        background: #f1f2f6;
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    
    .toolbox-item i {
        margin-right: 8px;
        font-size: 16px;
        color: #3498db;
    }
    
    /* Icon styles - these would reference an icon library like Font Awesome or custom icons */
    [class^="icon-"] {
        display: inline-block;
        width: 20px;
        height: 20px;
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>
