@page "/"
@using fromBuilder.Components
<!-- Important: Full height wrapper -->
<div style="height: 100vh; width: 100%; display: flex; flex-direction: row;">
    <div style="width: 10%; min-width: 10%; overflow: auto; border-right: 1px solid #ccc;">
        <Toolbox />
    </div>
    <div style="width: 70%; min-width: 40%; overflow: auto; border-right: 1px solid #ccc;">
        <FormBuilder OnHtmlChanged="@((html) => HtmlCode = html)" />
    </div>
    <div style="width: 20%; min-width: 20%; overflow: auto;">
        <CodeViewer HtmlCode="@HtmlCode" />
    </div>
</div>
@code {
    private string HtmlCode = "";
}